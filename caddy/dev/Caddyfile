{
    debug
}

website.local, localhost {
    log {
		output stdout
		format console
		level DEBUG
	}

	tls /ssl/cert.pem /ssl/key.pem

	root * /app/frontend/public

	php_fastcgi apps:9000 {
		header_up Host {host}
		header_up X-Real-IP {remote_host}
		header_up X-Forwarded-For {remote_host}
		header_up X-Forwarded-Proto {scheme}
	}

	file_server
}
